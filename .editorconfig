root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
insert_final_newline = false

[*.yml]
indent_style = space

[*.cs]
# diagnostics
# note that it doesn't enable all analyzers, some still need to be enabled explicitly
# that's why we list them all below explicitly
